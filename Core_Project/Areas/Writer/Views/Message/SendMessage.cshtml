@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<form class="forms-group" method="post">
    <div class="form-group">
        <label>Alıcı</label>
        @Html.TextBoxFor(x=>x.WriterMessageReceiver, new {@class = "form-control"})
        @*                        @Html.ValidationMessageFor(x=>x.SkillTitle)*@
    </div>
    <div class="form-group">
        <label>Konu</label>
        @Html.TextBoxFor(x=>x.WriterMessageSubject, new {@class = "form-control"})
        @*                        @Html.ValidationMessageFor(x=>x.SkillValue)*@
    </div>
    <div class="form-group">
        <label>Mesaj</label>
        @Html.TextAreaFor(x=>x.WriterMessageContent,10,50, new {@class = "form-control"})
        @*                        @Html.ValidationMessageFor(x=>x.SkillTitle)*@
    </div>
    <button type="submit" class="btn btn-outline-primary mr-2">Kaydet</button>
    <a href="/Writer/WriterDashboard/Index/" class="btn btn-outline-dark">Geri</a>
</form>



