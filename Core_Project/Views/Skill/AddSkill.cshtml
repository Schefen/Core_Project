@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Ekleme Sayfası</h3>
</div>
<form class="form-group" method="post">
    <br />
    <label>Yetenek</label>
    @Html.TextBoxFor(x=>x.SkillTitle, new {@class = "form-control"})
    @Html.ValidationMessageFor(x=>x.SkillTitle)
    <br />
    <label>Değer</label>
    @Html.TextBoxFor(x=>x.SkillValue, new {@class = "form-control"})
    @Html.ValidationMessageFor(x=>x.SkillValue)
    <br />
    <button class="btn btn-primary">Ekle</button>

</form>

