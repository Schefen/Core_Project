@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
@using (Html.BeginForm("EditSkill", "Skill", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    <div class="form-group">
                        @Html.HiddenFor(x=>x.SkillId, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Yetenek Adı</label>
                        @Html.TextBoxFor(x=>x.SkillTitle, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.SkillTitle)
                    </div>
                    <div class="form-group">
                        <label>Seviye</label>
                        @Html.TextBoxFor(x=>x.SkillValue, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.SkillValue)
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                    <a href="/Skill/Index" class="btn btn-dark">Geri</a>
                </form>
            </div>
        </div>
    </div>
}
