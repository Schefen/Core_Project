@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "AdminSendbox";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">(Admin - Yazar) Giden Kutusu</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Alıcı</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>İçerik</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.WriterMessageReceiver</td>
                                <td><label>@item.WriterMessageSubject</label>
                                <td>@(((DateTime)item.WriterMessageDate).ToString("dd-MMM-yyyy"))</td>
                                <td><a href="/AdminMessage/AdminSendboxDetails/@item.WriterMessageId" class="btn btn-outline-info">Detay</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


