@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageSender";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-group" method="post">
                <div class="form-group">
                    <label>Alıcı</label>
                    @Html.TextBoxFor(x=>x.WriterMessageReceiver, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    <label>Konu</label>
                    @Html.TextBoxFor(x=>x.WriterMessageSubject, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    <label>Mesaj</label>
                    @Html.TextAreaFor(x=>x.WriterMessageContent,10,50, new {@class = "form-control"})
                </div>
                <button type="submit" class="btn btn-outline-primary mr-2">Gönder</button>
                <a href="/Dashboard/Index" class="btn btn-outline-danger">İptal</a>
            </form>
        </div>
    </div>
</div>
