@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "ContactSubplace", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    <div class="form-group">
                        @Html.HiddenFor(x=>x.ContactId, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x=>x.ContactTitle, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Mail</label>
                        @Html.TextBoxFor(x=>x.ContactMail, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Telefon</label>
                        @Html.TextBoxFor(x=>x.ContactPhone, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Açıklama </label>
                        @Html.TextAreaFor(x=>x.ContactDescription,10,20, new {@class = "form-control"})
                    </div>
                    <button type="submit" class="btn btn-outline-primary mr-2">Güncelle</button>
                    <a href="/Dashboard/Index/" class="btn btn-dark">Geri</a>
                </form>
            </div>
        </div>
    </div>
}

