@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
 
@using (Html.BeginForm("Index", "Feature", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    <div class="form-group">
                        @Html.HiddenFor(x=>x.FeatureId, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Başlık Adı</label>
                        @Html.TextBoxFor(x=>x.FeatureHeader, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.FeatureHeader)
                    </div>
                    <div class="form-group">
                        <label>Ad - Soyad</label>
                        @Html.TextBoxFor(x=>x.FeatureName, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.FeatureName)
                    </div>
                    <div class="form-group">
                        <label>Pozisyon</label>
                        @Html.TextBoxFor(x=>x.FeatureTitle, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.FeatureTitle)
                    </div>
                    <button type="submit" class="btn btn-outline-primary mr-2">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
}

