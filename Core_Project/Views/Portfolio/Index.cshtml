@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Projelerim</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Proje</th>
                            <th>Ücret</th>
                            <th>İlerleme Durumu</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {                                      
                        <tr>
                            <td> @item.PortfolioName</td>
                            <td> @item.PortfolioPrice</td>
                            <td>
                                <div class="progress">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: @item.PortfolioRatio%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </td>
                                <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Portfolio/EditPortfolio/@item.PortfolioId" class="btn btn-outline-warning">Güncelle</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
                <a href="/Portfolio/AddPortfolio/" class="btn btn-outline-info">Yeni Proje Ekle</a>
            </div>
        </div>
    </div>
</div>


