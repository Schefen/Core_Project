@using EntityLayer.Concrete
@model List<Contact>

<div class="col-md-6" data-aos="fade-left" data-aos-delay="300">
    @foreach (var item in Model)
    {
        <div class="mt-3 px-1">
            <div class="h5">@item.ContactTitle</div>
            <p>@item.ContactDescription</p>
            <p>İsterseniz sol kısımdan bilgilerinizi bırakabilir, isterseniz de aşağıdaki hesaplarım üzerinden bana ulaşabilirsiniz.</p>
            <p>Umarım birlikte çalışabiliriz!</p>
        </div>
        <div class="mt-53 px-1">
            <div class="row">
                <div class="col-sm-2">
                    <div class="pb-1">Mail:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder">@item.ContactMail</div>
                </div>
                <div class="col-sm-2">
                    <div class="pb-1">LinkedIn:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder">linkedin.com/in/ibrahimrgl</div>
                </div>
                <div class="col-sm-2">
                    <div class="pb-1">Telefon:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder">@item.ContactPhone</div>
                </div>
            </div>
        </div>
    }

</div>