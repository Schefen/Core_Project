@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
@using (Html.BeginForm("Index", "About", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    <div class="form-group">
                        @Html.HiddenFor(x=>x.AboutId, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Başlık Adı</label>
                        @Html.TextBoxFor(x=>x.AboutTitle, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.AboutTitle)
                    </div>
                    <div class="form-group">
                        <label>Hakkımda </label>
                        @Html.TextBoxFor(x=>x.AboutDescription, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.AboutDescription)
                    </div>
                    <div class="form-group">
                        <label>Yaş</label>
                        @Html.TextBoxFor(x=>x.AboutAge, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.AboutAge)
                    </div>
                    <div class="form-group">
                        <label>Mail</label>
                        @Html.TextBoxFor(x=>x.AboutMail, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.AboutMail)
                    </div>
                    <div class="form-group">
                        <label>Telefon</label>
                        @Html.TextBoxFor(x=>x.AboutPhone, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.AboutPhone)
                    </div>
                    <div class="form-group">
                        <label>Adres</label>
                        @Html.TextBoxFor(x=>x.AboutAddress, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.AboutAddress)
                    </div>
                    <div class="form-group">
                        <label>Resim Yolu</label>
                        @Html.TextBoxFor(x=>x.AboutImageUrl, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.AboutImageUrl)
                    </div>
                    <button type="submit" class="btn btn-outline-primary mr-2">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
}