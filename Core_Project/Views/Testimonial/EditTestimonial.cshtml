@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditTestimonial", "Testimonial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    <div class="form-group">
                        @Html.HiddenFor(x=>x.TestimonialId, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Referans Ad</label>
                        @Html.TextBoxFor(x=>x.ClientName, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Şirket</label>
                        @Html.TextBoxFor(x=>x.ClientCompany, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Unvan</label>
                        @Html.TextBoxFor(x=>x.ClientTitle, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Resim Yolu</label>
                        @Html.TextBoxFor(x=>x.ClientImageUrl, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Yorum</label>
                        @Html.TextAreaFor(x=>x.ClientComment,6,10, new {@class = "form-control"})
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                    <a href="/Testimonial/Index/" class="btn btn-dark">Geri</a>
                </form>
            </div>
        </div>
    </div>
}

